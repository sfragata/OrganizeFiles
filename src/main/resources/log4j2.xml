<?xml version="1.0" encoding="UTF-8" ?>
<Configuration>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{ABSOLUTE} %5p %c - %m%n"/>
        </Console>
        <RollingFile name="APP_LOG_FILE" fileName="/tmp/organizefiles.log"
                     filePattern="/tmp/organizefiles-%d{yyyy-MM-dd_HH:mm:ss}.log.gz"
                     ignoreExceptions="false">
            <PatternLayout pattern="%d{ISO8601} %5p %c - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="20 MB"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Logger name="com.github.sfragata" level="debug">
            <AppenderRef ref="APP_LOG_FILE"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="APP_LOG_FILE"/>
        </Root>
    </Loggers>

</Configuration>